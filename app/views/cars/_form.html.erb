<%= form_with model: @car do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, minlength: 2, placeholder: "Name car", class: 'form-control' %>
  <%= f.label :description %>
  <%= f.text_field :description, required: true, minlength: 5, placeholder: "Descritpion", class: 'form-control' %>
  <%= f.label :max_rpm %>
  <%= f.text_field :max_rpm, required: true, minlength: 3, placeholder: "MAX RPM", class: 'form-control' %>
  <%= f.label :torque %>
  <%= f.text_field :torque, required: true, minlength: 3, placeholder: "Torque", class: 'form-control' %>
  <%= f.label :max_gear %>
  <%= f.text_field :max_gear, required: true, minlength: 1, placeholder: "MAX GEAR", class: 'form-control' %>
  <%= f.label :max_speed %>
  <%= f.text_field :max_speed, required: true, minlength: 2, placeholder: "MAX SPEED", class: 'form-control' %>
  <br>
  <%= f.submit "Submit!", class: 'btn btn-primary'%>
<% end %>
