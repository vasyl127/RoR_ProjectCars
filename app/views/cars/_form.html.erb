<%= render 'shared/errors', object: @car %>

<%= form_with model: @car do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name,  placeholder: "Name car", class: 'form-control' %>
  <%= f.label :description %>
  <%= f.text_field :description, placeholder: "Descritpion", class: 'form-control' %>
  <%= f.label :max_rpm %>
  <%= f.text_field :max_rpm, placeholder: "MAX RPM", class: 'form-control' %>
  <%= f.label :torque %>
  <%= f.text_field :torque, placeholder: "Torque", class: 'form-control' %>
  <%= f.label :max_gear %>
  <%= f.text_field :max_gear, placeholder: "MAX GEAR", class: 'form-control' %>
  <%= f.label :max_speed %>
  <%= f.text_field :max_speed, placeholder: "MAX SPEED", class: 'form-control' %>
  <br>
  <%= f.submit "Submit!", class: 'btn btn-primary'%>
<% end %>
